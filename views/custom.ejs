<%- include('header'); -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %></h1>

  </div>

  <div class="box">
    <% if (entries) { %>
      <% entries.forEach((item) =>{ %>
        <form action="/delete" method='post'>
          <div class="item">
            <input onChange="this.form.submit()" type="checkbox" name="checkbox" value=<%= item._id %>>
            <p><%= item.name %></p>
          </div>
        </form>
      <% }); %>
    <% } %>

    <form action="/" method='post'>
      <input type="text" placeholder="New Item" name="newItem">
      <button name="list" value= <%= listTitle %> type="submit">+</button>
    </form>
  </div>
  <div class="push"></div>

<%- include('footer'); -%>
